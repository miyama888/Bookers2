<div class = "container">
  <div class = "row">
    <div class = "col-md-6 col-md-offset-3">
      <h2>Editing Book</h2>
        <%= form_for(@book) do |f| %>
          <% if @book.errors.any? %>
            <div id="error_explanation">
            <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>
              <ul>
                <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              </ul>
              <% end %>
            </div>
          <% end %>
            <div class = "field">
            <label>Title</label>
              <div class="field row">
                <%= f.text_field :title,class: "col-xs-12" %><br>
              </div>
            </div>
            <div class = "field">
              <label>Opinion</label>
            </div>
            <div class= "field row">
              <%= f.text_area :body, class: "col-xs-12" %>
            </div>
            <div class = "actions row">
              <%= f.submit 'Update Book', class: "btn btn-primary col-xs-12" %>
            </div>
            <% end %>
              <%= link_to "Show", book_path(@book) %>
              |
	          <%= link_to "Back", books_path %>
    </div>
    <div class = "col-md-3"></div>
  </div>
</div>