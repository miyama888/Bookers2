<div class="container">
  <div class="row">
    
<%=render 'users/user', user: @user, book: @book %>


<div class="col-xs-9">
<h2>Books</h2>


<table class="table table-hover table-inverse">
  <thead>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
    <th colspan="3"></th>
  </thead>
  <tbody>
  <% @books.each do |book| %>
  <tr>
    <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
    <td><%=link_to book_path(book.id) do%><%= book.title %><% end %></td>
    <td><%= book.body %></td>
    <% end %>
  </tr>
  </tbody>
</table>
</div>
</div>
</div>
