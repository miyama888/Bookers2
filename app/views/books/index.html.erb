<%=render 'users/user', user: @user, book: @book %>
<h2>Books</h2>
<table>
  <thead>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </thead>
  <tbody>
  <% @books.each do |book| %>
  <tr>

    <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
    <td><%=link_to book_path(book.id) do%><%= book.title %><% end %></td>
    <td><%= book.body %></td>
    <% end %>
  </tr>
  </tbody>
</table>

