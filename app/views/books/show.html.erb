<div class="container">
  <div class="row">
<%=render 'users/user', user: @user, book: @book %>

<h2>Book detail</h2>
<table>
	<thead>
		<th></th>
		
	</thead>
	<tbody>
		
	      <tr>
	      	<td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %><br>
	      		<%= @user.name %>
	      </td>
        	<td><%= @book.title %></td>
        	<td><%= @book.body %></td>
        	<% if  @user.id == current_user.id %>
			<td><%= link_to "Edit", edit_book_path(@book), class: "pull-right" %></td>
        	<td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "Are you sure?" %></td>
        	<% end %>
        </tr>
      
	</tbody>
</table>
</div>
</div>