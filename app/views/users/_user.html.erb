
<div class="profile-container">
<h2>User info</h2>
  <%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
  <table class = "table">
  <tr>
  		<th>"name"</th>
  		<th><h3 class="profile-name"><%= user.name %></h3></th>
  </tr>
  <tr>
  	<th>"introduction"</th>
  	<th><p class = "profile-introduction"><%= user.introduction %></p></th>
  </tr>
  </table>

  <% if user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(user), class: "pull-right" %></p>
  <% end %>
</div>

<div class = "new book">
	<h2>New book</h2>
<%= form_for(book) do |f| %>

    <% if book.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(book.errors.count, "error") %> prohibited this product from being saved:</h2>

        <ul>
          <% book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class = "field">
      <div class="field_with_errors">
        <label>Title</label>
      </div>
      <div class="field_with_errors">
        <%= f.text_field :title %><br>
      </div>
    </div>

    <div class = "field">
      <div class="field_with_errors">
    <label>Body</label>
      </div>
      <div class="field_with_errors">
        <%= f.text_area :body %>
      </div>
    </div>

    <br><%= f.submit 'Create Book' %></br>
    <% end %>
</div>