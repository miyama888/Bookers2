<div class = "body">
  <div class= "container">
    <div class = "row">
      <%= form_for(@user, url: user_path(@user.id)) do |f| %>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this product from being saved:</h2>
          <ul>
              <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <h2>User info</h2>
      <div class="col-xs-3">
        <div class="field">
          <label>Name</label>
          <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"名前"%>
        </div> <!--名前変更-->
        <div class="field">
          <label>Image</label>
          <label class="control-label sr-only" for="inputEmail">Image</label>
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
        </div> <!--プロフィール画像変更-->
        <div class="field">
          <label>Introduction</label>
          <%= f.text_area :introduction, autofocus: true, class:"form-control", id:"inputEmail" %>
        </div> <!--自己紹介変更-->
        <div class = "actions">
          <%= f.submit "Update User", class: "data-disable-with" %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</body>
