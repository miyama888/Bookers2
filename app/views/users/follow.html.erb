<h1>Follow User</h1>

<% if  @user.followings.count == 0 %>
<p>ユーザーはいません。</p>
<% else %>
<table class= "table table-hover table-inverse">
	<thead>
		<tr>
		<td>image</td>
		<td>name</td>
		</tr>
	</thead>
		<% @user.followings.each do |user| %>
	<tbody>
		<tr>
		<td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img pull-left profile-img", fallback: "no_image.jpg" %></td>
  		<td>  <%= user.name %> </td>
			<% user ||= current_user %>
      	<td>
        	<a href="<%= followings_user_path(user) %>">
 			フォロー数:
        	<strong id="followings" class="stat">
        	<%= user.followings.count %>
        	</strong>
        	</a>
     	</td>
    
      	<td>
        	<a href="<%= followers_user_path(user) %>">
			フォロワー数:
        	<strong id="followers" class="stat">
        	<%= user.followers.count %>
        	</strong>
        	</a>
      	</td>
  		<td><%= link_to 'Show', user_path(user) %></td>
		</tr>
	</tbody>
<% end %>
</table>
<% end %>
